{
    "version": 2,
    "functions": {
        "api/**/*.mjs": {
            "runtime": "nodejs20.x",
            "memory": 1024,
            "maxDuration": 25
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.mjs"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "public": "public"
}